[user]
    name = "miiton"
    email = "vo.gu.ba.miiton@gmail.com"
[core]
    excludesfile = $HOME/.gitignore_global
    editor = /usr/bin/vim
[diff]
    tool = mvim
[difftool "mvim"]
    cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"
[difftool]
    prompt = false
[merge]
    ff = false
    tool = mvim
[difftool "mvim"]
    cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"
[mergetool "mvim"]
    cmd = mvim -f -d \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
    trustExitCode = true
[color]
    ui = auto
[alias]
    s = status --short --branch
    l = log --date=iso --graph --all --pretty='%x09%ad %<(7)%C(blue)%h%C(reset) %C(yellow)%cn%C(reset) %<(50,trunc)%s %Cred%d%>(20)%Cgreen%cr%C(reset)'
[push]
    default = simple
